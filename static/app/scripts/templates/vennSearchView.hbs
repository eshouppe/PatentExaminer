<div class="vennSearchView">
  {{#if primarysearch}}
    <div class="searchContainer mdl-color-text--grey-100">

      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col searchRow">
          <div class="inputForm">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <input class="mdl-textfield__input" type="text" id="search1">
              <label class="mdl-textfield__label mdl-color-text--grey-100" for="search1">Enter a Primary Search</label>
            </div>
            <label class="mdl-button mdl-js-button mdl-button--icon mdl-layout--large-screen-only" for="search1">
              <i class="material-icons">search</i>
            </label>
          </div>
        </div>
        <div class="mdl-cell mdl-cell--12-col">
          <button class="searchnow center mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
            Search <i class="material-icons">search</i>
          </button>
        </div>
      </div>
    </div>
  {{/if}}
  {{#if primaryresults}}
    <div class="primaryResultsContainer mdl-color-text--grey-100">
      <div class="mdl-grid">
        <div id="treeChartView" class="mdl-cell mdl-cell--12-col"></div>

        <div class="mdl-grid wordInputContainer">
          <div class="mdl-cell mdl-cell--4-col">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label wordSelection">
              <input class="mdl-textfield__input" type="text" id="search2">
              <label class="mdl-textfield__label mdl-color-text--grey-100" for="search2">Enter a Word</label>
            </div>
          </div>
          <div class="mdl-cell mdl-cell--4-col">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label wordSelection">
              <input class="mdl-textfield__input" type="text" id="search3">
              <label class="mdl-textfield__label mdl-color-text--grey-100" for="search3">Enter a word</label>
            </div>
          </div>
          <div class="mdl-cell mdl-cell--4-col">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label wordSelection">
              <input class="mdl-textfield__input" type="text" id="search4">
              <label class="mdl-textfield__label mdl-color-text--grey-100" for="search4">Enter a word</label>
            </div>
          </div>
        </div>
        <div class="mdl-cell mdl-cell--12-col">
          <button class="searchnow center mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
            Select These Words <i class="material-icons">search</i>
          </button>
        </div>
      </div>

    </div>
  {{/if}}
  {{#if vennresults}}
    <div class="vennResults mdl-color-text--grey-100">
      <h4 class="center">Venn Search Results</h4>
      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col">
          <div class="chartView" style="width:100%;"></div>
        </div>
        <div class="mdl-cell mdl-cell--12-col">
          <button class="reset center mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
            Reset Zoom <i class="material-icons">search</i>
          </button>
        </div>
      </div>
    </div>
  {{/if}}
</div>

